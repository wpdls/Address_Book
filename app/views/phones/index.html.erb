<p id="notice"><%= notice %></p>

<h1>Phones</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phones.each do |phone| %>
      <tr>
<div id="ajax-phone">
    <section class="show">
        <div id="phone-show">
            <p> <%= phone.phone_number %> </p>
            <p> <%= phone.comment %> </p>
        </div>

        <div class="links">
            <%= link_to 'edit', edit_phone_path(phone) %>   
            <%= link_to 'delete', phone, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
    </section>
</div>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Phone', new_phone_path %><br><br>
