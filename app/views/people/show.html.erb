<p id="notice"><%= notice %></p>
    <h1>
      <%= @person.salutation%> <%= @person.first_name%> <%= @person.middle_name%> <%= @person.last_name%>
    </h1>

    <div class="container_show">
    <div class="show">
      <td><%= @person.salutation%> <%= @person.first_name%> <%= @person.middle_name%> <%= @person.last_name%></td>
      <td><%= @person.social_security_number%></td>
      <td><%= @person.birthdate.try(:birthdate).try(:strftime, '%d of %B, %Y')%></td>
      <td><%= @person.comment%></td>
      </div>
      <div class="add">
      <%= link_to 'edit/add your basic info', edit_person_path(@person) %>
      </div>
    </div>

    <div class="container_show">
      <% @phones.each do |phone| %>
      <div class="show">
      <p> <%= phone.phone_number %> </p>
      <p> <%= phone.comment %> </p>
      <div class="links">
      <%= link_to 'edit', edit_phone_path(phone) %>   
      <%= link_to 'delete', phone, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
      </div>
      <% end %>
      <div class="add">
      <%= link_to 'add more phone numbers', new_person_phone_path(:person_id => @person.id) %>
      </div>
    </div>

    <div class="container_show">
      <% @emails.each do |email| %>
      <div class="show">
      <p> <%= email.email %> </p>
      <p> <%= email.comment %> </p>
      <div class="links">
      <%= link_to 'edit', edit_email_path(email) %>
      <%= link_to 'delete', email, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
      </div>
      <% end %>
      <div class="add">
      <%= link_to 'add more emails', new_person_email_path(:person_id => @person.id) %>
      </div>
    </div>
        
    <div class="container_show">
      <% @addresses.each do |address| %>
      <div class="show">
      <div>
      <p> <%= address.street %> </p>
      <p> <%= address.city %>, <%= address.state %> <%= address.zip %></p>
      <p><%= address.country %></p>
      </div>
      <div class="links">
      <%= link_to 'edit', edit_address_path(address, @person.id) %>
      <%= link_to 'delete', address, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
      </div>
      <% end %>
      <div class="add">
      <%= link_to 'add more Addresses', new_person_address_path(:person_id => @person.id) %>
      </div>
    </div>
    



