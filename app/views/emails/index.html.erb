<p id="notice"><%= notice %></p>

<h1>Emails</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @emails.each do |email| %>
    <div id="ajax">
      <section class="show">
      <p> <%= email.email %> </p>
      <p> <%= email.comment %> </p>
      <div class="links">
        <%= link_to 'edit', edit_email_path(email) %>
        <%= link_to 'delete', email, method: :delete, data: { confirm: 'Are you sure?' }, class: "delete" %>
      </div>
      </section>
    </div>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Email', new_email_path(@emails) %>
